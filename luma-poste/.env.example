# Waitlist Configuration (optionnel, valeurs par défaut si non définies)
NEXT_PUBLIC_WAITLIST_SIGNUPS_COUNT=127
NEXT_PUBLIC_WAITLIST_LAUNCH_DATE=Janvier 2026
NEXT_PUBLIC_WAITLIST_OFFSET=130
