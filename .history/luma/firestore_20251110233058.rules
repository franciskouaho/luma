rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Ideas collection
    match /ideas/{ideaId} {
      // Allow users to read their own ideas
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Allow users to create ideas (must set userId to their own uid)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow users to update their own ideas
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;

      // Allow users to delete their own ideas
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Users collection (for future use)
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // TikTok sessions temporaires (créées par l'API Next.js, lues par l'app mobile)
    match /tiktok_sessions/{sessionToken} {
      // Permettre aux utilisateurs authentifiés de lire et supprimer les sessions
      allow read, delete: if isAuthenticated();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
