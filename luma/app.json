{
  "expo": {
    "name": "Lumaa",
    "slug": "lumaa",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "luma",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.emplica.luma",
      "googleServicesFile": "./GoogleService-Info.plist",
      "appleTeamId": "NAN7MFNMT7",
      "associatedDomains": ["applinks:luma-post.emplica.fr"],
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSUserNotificationsUsageDescription": "Luma utilise les notifications pour vous tenir informé.",
        "NSCameraUsageDescription": "Luma a besoin d'accéder à votre caméra pour créer du contenu.",
        "NSPhotoLibraryUsageDescription": "Luma a besoin d'accéder à vos photos pour créer du contenu."
      }
    },
    "android": {
      "package": "com.emplica.luma",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "backgroundColor": "#1E1E1E",
        "foregroundImage": "./assets/images/logo.png",
        "backgroundImage": "./assets/images/logo.png",
        "monochromeImage": "./assets/images/logo.png"
      },
      "permissions": [
        "INTERNET",
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "luma-post.emplica.fr",
              "pathPrefix": "/api/auth/tiktok/callback"
            },
            {
              "scheme": "https",
              "host": "luma-post.emplica.fr",
              "pathPrefix": "/auth/tiktok/callback"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/messaging",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E1E1E",
          "dark": {
            "backgroundColor": "#1E1E1E"
          },
          "android": {
            "permissions": ["com.android.vending.BILLING"],
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "enablePageSize16K": true,
            "enableEdgeToEdge": true,
            "statusBarStyle": "light",
            "statusBarBackgroundColor": "transparent"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "forceStaticLinking": [
              "RNFBApp",
              "RNFBAuth",
              "RNFBFirestore",
              "RNFBMessaging",
              "RNFBStorage"
            ]
          },
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "enablePageSize16K": true,
            "enableEdgeToEdge": true,
            "statusBarStyle": "light",
            "statusBarBackgroundColor": "transparent"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
